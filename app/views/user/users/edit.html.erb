  <p id ="notice"></p>
  <div>
    <%= flash[:notice] %>
  </div>
<div class="container">
  <div class="row justify-content-center">
  <%= form_with model: @user, url: user_path(current_user) do |f| %>
    <div class="field mt-4">
      <div class="row">
        <div class="col-sm-2">
        <%= f.label "Image", class: "col-form-label" %>
        </div>
        <div class="col-sm-2"><%= image_tag @user.get_profile_image(200,200), size: "80x80" %></div>
        <div class="col-sm-3">
        <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*", class: 'form-control-sm ' %>
        </div>
      </div>
    </div>
    
    <div class="field mt-4">
      <div class="row">
        <div class="col-sm-2">
        <%= f.label "Name", class: "col-form-label" %>
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-3">
        <%= f.text_field :name, class: 'form-control-sm ' %>
        </div>
      </div>
    </div>
       
    <div class="field mt-4">
      <div class="row">
        <div class="col-sm-2">
        <%= f.label "Tel", class: "col-form-label" %>
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-3">
        <%= f.text_field :telephone_number, class: 'form-control-sm ' %>
        </div>
      </div>
    </div>
    
     <div class="field mt-4">
      <div class="row">
        <div class="col-sm-2">
        <%= f.label "E-mail" , class: "col-form-label" %>
        </div>
        <div class="col-sm-1"></div>
        <div class="col-sm-3">
        <%= f.text_field :email,autofocus: true, autocomplete: "email", class: 'form-control-sm ' %>
        </div>
      </div>
    </div>
    
    <div class="actions mt-5">
        <%= f.submit "編集内容を保存", class:"btn btn-success" %>
        <%= link_to "削除する", complete_users_path , data: { confilm: "本当に削除しますか？" }, class:"btn btn-danger ml-3" %>
    </div>
  <% end %>
  </div>
</div>