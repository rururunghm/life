<p id ="notice"></p>
<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-2 text-center mb-4 ml-5"><h3>mypage</h3></div>
    <div class="col">  
      <% if current_user.name != "guestuser" %>
        <%= link_to user_information_edit_path, class: "btn btn-success" do %>
          <i class="fa-solid fa-user-gear" aria-hidden="true"></i>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row ml-5">
    <div class="w-100"></div>
    <div class="col-2 bg-light border py-2">Image</div>
    <div class="col-3 border py-2">
      <%= image_tag @user.get_profile_image(200,200), size: "100x100" %>
    </div>
    <div class="w-100"></div>
    <div class="col-2 bg-light border py-2">Name</div>
    <div class="col-3 border py-2"><%= @user.name %></div>
    
    <div class="w-100"></div>
    <div class="col-2 bg-light border py-2">Email</div>
    <div class="col-3 border py-2"><%= @user.email %></div>
    
    <div class="w-100"></div>
    <div class="col-2 bg-light border py-2">Tel</div>
    <div class="col-3 border py-2"><%= @user.telephone_number %></div>
  </div>
</div>