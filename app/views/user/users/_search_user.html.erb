<p id="notice"></p>
<div class="container">
<div class="mb-4"><h2>Search</h2></div>
<%= @message %>
<% if @users.present? %>
<% @users.each do |item| %>
    <div class="row card-shadow w-75">
      <div class="col-2">
        <%= link_to other_user_posts_path(item.id) do %>
        <%= image_tag item.image, size: "50x50" %>
        <% end %>  
      </div>
      <div class="col-8">
        <div class="row">
          <div class="col font-weight-bold"><%= item.name %></div>
          <div class="col"><time><%= l DateTime.current, format: :short %></time></div>
          <div class="col"><%= link_to "削除", post_path(item.id), method: :delete %></div>
        </div>
        <div><%= @post %></div>
        <div class="row">
          <div class="col">
            <%= link_to post_path(item.id) do %>
              <i class="fa-regular fa-comment"></i>
            <% end %>
          </div>
          <div class="col">
            
          </div>
        </div>
      </div>
      </div>
    </div>
<% end %>
<% end %>
</div>