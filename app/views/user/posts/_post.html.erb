<div class="container">
 <div class="row">
   
   <% if @posts.present? %>
    <% @posts.each do |item| %>
       
     <%= link_to  post_path(item.id)  do %>
   　  <%= l item.created_at, format: :short %>
   　<% end %>
   　
   　<%= item.body %>
