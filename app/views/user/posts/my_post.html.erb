<p id="notice"></p>
<div class="container">
  <div class="row">
    <% @my_post.each do |item| %>
      <div class="col-2">
        <%= link_to  post_path(item.id) do %>
          <%= l item.created_at, format: :short %>
        <% end %>
    　</div>
    　<div class="col-6">
    　  <%= item.body %>
    　</div>
    　<div class="col-2">
    　  <%= link_to "#{item.comments.count} コメント", post_path(item.id) %>
    　</div>
    　<div class="col-2">
    　  <%= link_to "削除", post_path(item.id), method: :delete %>
    　</div>
    <% end %>
  </div>
</div>