<p id="notice"></p>
<div class="container">
  <div><%= flash[:notice] %></div>
  <div class="mb-4"><h2>ユーザ投稿一覧</h2></div>
  <% if @posts.present? %>
  <!--@postが存在すればtrue-->
  <% @posts.each do |item| %>
    <div class="row card-shadow w-75">
      <div class="col-sm-2">
        <%= link_to other_user_posts_path(item.user.id) do %>
        <%= image_tag item.user.get_profile_image(200,200), size: "80x80" %>
        <% end %>
      </div>
      <div class="col-sm">
        <div class="row">
          <div class="col-sm font-weight-bold"><%= item.user.name %></div>
          <div class="col-sm"><time><%= l DateTime.current, format: :short %></time></div>
          <div class="col-sm">
              <%= link_to "削除", post_path(item.id), method: :delete %>
          </div>
        </div>
        <div><%= item.body %></div>
      </div>
    </div>
  <% end %>
  <% end %>
</div>

