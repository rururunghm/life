<p id ="notice"></p>
<div class="container">
  <h4 class="text-dark bg-light w-25 text-center mb-y">ユーザコメント一覧</h4>
  <% if @comments.present? %>
    <% @comments.each do |comment| %>
      <div class="row card-shadow w-75">
        <div class="col-sm-2">
          <%= image_tag comment.user.get_profile_image(200,200), size: "80x80" %>
        </div>
        <div class="col-8">
          <div class="row">
            <div class="col-sm font-weight-bold"><%= comment.user.name %></div>
            <div class="col-sm"><time><%= l DateTime.current, format: :short %></time></div>
            <div class="col-sm">
                <%= link_to "削除", admin_comment_path(comment), method: :delete %>
            </div>
          </div>
            <div class="mt-2"><%= comment.comment %></div>
        </div>
      </div>
    <% end %>
  <% end %>  
</div>